generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserToken {
  id Int @id @default(autoincrement())

  userId    Int      @unique
  entryTime DateTime
  expiredAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

enum cashLogType {
  USE
  CHARGE
}

model CashLog {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  amount Int
  type   cashLogType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model User {
  id   Int    @id @default(autoincrement())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  CashLog         CashLog[]
  ConcertDateUser ConcertDateUser[]
}

enum payStatus {
  PAID
  UNPAID
}

model ConcertDateUser {
  id Int @id @default(autoincrement())

  concertDateId Int
  concertDate   ConcertDate @relation(fields: [concertDateId], references: [id])

  userId Int
  user   User @relation(fields: [userId], references: [id])

  seat Int @default(0)

  payStatus payStatus @default(UNPAID)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([concertDateId, seat])
  @@index([concertDateId])
}

model Concert {
  id       Int    @id @default(autoincrement())
  maxSeats Int    @default(0)
  name     String

  price Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ConcertDate ConcertDate[]
}

model ConcertDate {
  id   Int      @id @default(autoincrement())
  date DateTime

  concertId       Int
  concert         Concert           @relation(fields: [concertId], references: [id])
  ConcertDateUser ConcertDateUser[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([concertId])
}
